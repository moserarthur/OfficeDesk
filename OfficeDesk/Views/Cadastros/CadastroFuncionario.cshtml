@{ ViewData["Title"] = "Cadastro Funcionario"; }

<link rel="stylesheet" href="~/css/Table.css" />


<div class="table-wrapper">

    <table class="fl-table">
        <thead>
            <tr>
                <th><h1>Cadastrar Funcionário</h1> </th>
            </tr>
        </thead>
    </table>
    <form action="/cadastros/authcadastrofuncionario" method="post" class="needs-validation" novalidate>
        <h2>Login</h2>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" id="input_email" name="input_email" placeholder="funcionario_sobrenome@gmail.com" maxlength="50" value="" required>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Email inválido!
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="input_senha">Senha(mínimo 8 caracteres)</label>
                <input type="password" class="form-control" id="input_senha" name="input_senha" placeholder="Senha" minlength="8" ; maxlength="50" size="8" value="" required>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Mínimo 8 caracteres!
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="input_senha_confirma">Confirmar Senha</label>
                <input type="password" class="form-control" id="input_senha_confirma" name="input_senha_confirma" placeholder="Confirmar senha" minlength="8" ; maxlength="50" size="8" value="" required> <!--Exige no minimo 8 caracteres-->
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Senha não confere!
                </div>
            </div>
        </div>



        <script>
            var input_senha = document.getElementById("input_senha")
                , input_senha_confirma = document.getElementById("input_senha_confirma");



            function validatePassword() {
                if (input_senha.value != input_senha_confirma.value) {
                    input_senha_confirma.setCustomValidity("Senhas diferentes!"); //Script para conferir se as senhas digitadas são iguais
                } else {
                    input_senha_confirma.setCustomValidity('');
                }
            }



            input_senha.onchange = validatePassword;
            input_senha_confirma.onkeyup = validatePassword;
        </script>



        <hr />
        <h2>Dados Pessoais</h2>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="input_name">Nome</label>
                <input type="text" class="form-control" id="input_name" name="input_name" placeholder="João de Deus" maxlength="50" value="" required>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Insira um nome!
                </div>
            </div>
            <div class="form-group col-md-3">
                <label for="input_data_de_nascimento">Data de Nascimento</label>
                <input type="date" class="form-control" id="input_data_de_nascimento" name="input_data_de_nascimento" placeholder="01/01/2000" value="" required>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Data inválida!
                </div>
            </div>
            <div class="form-group col-md-3">
                <label for="input_cpf">Cpf</label>
                <input type="text" class="form-control" id="input_cpf" name="input_cpf" placeholder="111.222.333-44" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" value="" required> <!--Pattern-> máscara para o campo-->
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Cpf inválido!
                </div>
            </div>
            <div class="form-group col-md-3">
                <label for="input_rg">Rg</label>
                <input type="text" class="form-control" id="input_rg" name="input_rg" placeholder="1.222-333" value="" required> <!--Pattern-> máscara para o campo-->
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Cpf inválido!
                </div>
            </div>
            <div class="form-group col-md-3">
                <label for="input_tel_1">Telefone 1</label>
                <input type="text" class="form-control" id="input_tel_1" name="input_tel_1" placeholder="(47) 00000-0000" pattern="\([0-9]{2}\)[0-9]{5}-[0-9]{4}" value="" required><!--Pattern-> máscara para o campo-->
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Telefone inválido!
                </div>
            </div>
            <div class="form-group col-md-3">
                <label for="input_tel_2">Telefone 2 (opcional)</label>
                <input type="tel" class="form-control" id="input_tel_2" name="input_tel_2" placeholder="(47) 90000-0000" pattern="\([0-9]{2}\)[0-9]{5}-[0-9]{4}"><!--Pattern-> máscara para o campo-->
            </div>
        </div>
        <hr />
        <h2>Endereço</h2>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="input_cep">CEP</label>
                <input type="text" class="form-control" id="input_cep" name="input_cep" placeholder="12345-123" pattern="\d{5}-\d{3}" value="" required><!--Pattern-> máscara para o campo-->
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Cep inválido!
                </div>
            </div>
            <div class="form-group col-md-6">
                <label for="input_cidade">Cidade</label>
                <input type="text" class="form-control" id="input_cidade" name="input_cidade" maxlength="50" value="" required>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Cidade inválida!
                </div>
            </div>
            <div class="form-group col-md-4">
                <label for="input_estado">Estado</label>
                <select id="input_estado" name="input_estado" class="form-control" required>
                    <option selected disabled value="">Escolha...</option>
                    <option value="AC">Acre</option>
                    <option value="AL">Alagoas</option>
                    <option value="AP">Amapá</option>
                    <option value="AM">Amazonas</option>
                    <option value="BA">Bahia</option>
                    <option value="CE">Ceará</option>
                    <option value="DF">Distrito Federal</option>
                    <option value="ES">Espírito Santo</option>
                    <option value="GO">Goiás</option>
                    <option value="MA">Maranhão</option>
                    <option value="MT">Mato Grosso</option>
                    <option value="MS">Mato Grosso do Sul</option>
                    <option value="MG">Minas Gerais</option>
                    <option value="PA">Pará</option>
                    <option value="PB">Paraíba</option>
                    <option value="PR">Paraná</option>
                    <option value="PE">Pernambuco</option>
                    <option value="PI">Piauí</option>
                    <option value="RJ">Rio de Janeiro</option>
                    <option value="RN">Rio Grande do Norte</option>
                    <option value="RS">Rio Grande do Sul</option>
                    <option value="RO">Rondônia</option>
                    <option value="RR">Roraima</option>
                    <option value="SC">Santa Catarina</option>
                    <option value="SP">São Paulo</option>
                    <option value="SE">Sergipe</option>
                    <option value="TO">Tocantins</option>
                    <option value="EX">Estrangeiro</option>




                </select>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Escolha um Estado!
                </div>
            </div>
        </div>
        <div class="form-row">



            <div class="form-group col-md-5">
                <label for="input_rua">Rua</label>
                <input type="text" class="form-control" id="input_rua" name="input_rua" placeholder="ex: Rua XV Novembro" maxlength="50" value="" required>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Insira uma Rua!
                </div>
            </div>
            <div class="form-group col-md-2">
                <label for="input_numero_residencia">Número</label>
                <input type="text" class="form-control" id="input_numero_residencia" name="input_numero_residencia" placeholder="ex: 277" maxlength="4" value="" required>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Número inválido!
                </div>
            </div>
            <div class="form-group col-md-5">
                <label for="input_bairro">Bairro</label>
                <input type="text" class="form-control" id="input_bairro" name="input_bairro" placeholder="ex: Centro" maxlength="50" value="" required>
                <div class="invalid-feedback">
                    <!--Mensagem em caso de campo inválido-->
                    Insira um bairro!
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="input_complemento">Complemento</label>
            <input type="text" class="form-control" id="input_complemento" name="input_complemento" placeholder="ex: Apartamento/Casa" maxlength="50" value="" required>
            <div class="invalid-feedback">
                <!--Mensagem em caso de campo inválido-->
                Insira um complemento!
            </div>
        </div>
        <hr />
        <div>
            <!--Dados do funcionário-->
            <h2>Dados Funcionário</h2>
            <div class="form-row">



                <div class="form-group col-md-6">
                    <label for="input_cargo">Cargo</label>
                    <input type="text" class="form-control" name="input_cargo" id="input_cargo" placeholder="ex: Veterinário" maxlength="50" value="" required>
                    <div class="invalid-feedback">
                        <!--Mensagem em caso de campo inválido-->
                        Cargo inválido!
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label for="input_salario">Salário (R$)</label>
                    <input type="number" step="0.01" class="form-control" name="input_salario" id="input_salario" placeholder="ex: 1000,00 " max="99999999" value="" required>
                    <div class="invalid-feedback">
                        <!--Mensagem em caso de campo inválido-->
                        Salário inválido!
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label for="input_crmv">CRMV(Opcional)</label>
                    <input type="text" class="form-control" name="input_crmv" id="input_crmv" placeholder="ex: 11005" maxlength="50">
                </div>
            </div>
        </div>
        <div class="form-group col-md-4">
            <label for="input_nivel">Nível</label>
            <select id="input_nivel" name="input_nivel" class="form-control" required>
                <option selected disabled value="">Escolha...</option>
                <option value="1">Funcionário</option>
                <option value="2">Administrador</option>

            </select>
            <div class="invalid-feedback">
                <!--Mensagem em caso de campo inválido-->
                Escolha um Nível!
            </div>
        </div>
        <br />
        <br />
        <!--Botão que cadastra caso todos os requisitos sejam preenchidos-->
        <button id="btn_cadastrar" type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
</div>
